{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Copy vitamin packages to counter example",
        "type": "shell",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "command": "cp -r packages/vitaminjs-* examples/counter/node_modules/",
        "problemMatcher": []
      },
      {
        "label": "Copy back vitamin from counter example to packages directory",
        "type": "shell",
        "command": "cp -r examples/counter/node_modules/vitaminjs-* packages/",
        "problemMatcher": []
      },
      {
        "label": "Counter build",
        "type": "shell",
        "group": "build",
        // "group": {
        //   "kind": "build",
        //   "isDefault": true
        // },
        "command": "cp -r ../../packages/vitaminjs-* node_modules/ && ./node_modules/.bin/vitamin build",
        "options": {
          "cwd": "${workspaceFolder}/examples/counter",
          "env": {
            "DEBUG": "vitamin:*"
          }
        },
        "problemMatcher": []
      },
      {
        "label": "Counter start",
        "type": "shell",
        // "group": "build",
        // "group": {
        //   "kind": "build",
        //   "isDefault": true
        // },
        "command": "cp -r ../../packages/vitaminjs-* node_modules/ && ./node_modules/.bin/vitamin start",
        "options": {
          "cwd": "${workspaceFolder}/examples/counter",
          "env": {
            "DEBUG": "vitamin:*"
          }
        },
        "problemMatcher": []
      }
    ]
  }
